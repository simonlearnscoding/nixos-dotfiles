[
  {
    "backlight": {
      "device": "intel_backlight",
      "format": "{icon} ",
      "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
      "format": "{icon} {capacity}%", // This adds percentage next to icon
      "format-alt": "{icon} {capacity}%", // For alternative view
      "format-charging": "󰂄 {capacity}%", // Charging state
      "format-plugged": "󰂄 {capacity}%", // Plugged-in state
      "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󱟢"],
      "states": {
        "critical": 15,
        "warning": 30
      }
    },
    "clock": {
      "format": "  |  {:%H:%M:%S}",
      "format-alt": "   {:%d/%m/%Y}",
      "interval": 1,
      "timezone": "Austria/Vienna",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "cpu": {
      "format": "󰍛  {usage}%",
      "interval": 5,
      "tooltip": false,
      "on-click": "btop"
    },
    "memory": {
      "format": "󰘚  {percentage}%",
      "interval": 5,
      "tooltip": false,
      "on-click": "btop"
    },
    "network": {
      "format-wifi": "{icon}",
      "format-ethernet": "󰈀 {ifname}",
      "format-disconnected": "󰖪 Disconnected",
      "format-icons": {
        "wifi": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "ethernet": "󰈀",
        "disconnected": "󰖪"
      },
      "on-click": "nm-connection-editor",
      "interval": 5,
      "tooltip": false
    },
    "bluetooth": {
      "format": "",
      "format-disabled": "󰂲", // Icon when Bluetooth is off
      "format-connected": " {device_alias}", // Shows connected device
      "format-on": "", // Icon when Bluetooth is on but not connected
      "interval": 5,
      "on-click": "blueman-manager", // GUI manager (or use 'bluetoothctl' for CLI)
      "on-click-right": "bluetooth toggle" // Toggle Bluetooth on right-click
    },
    "custom/lock": {
      "format": "",
      "on-click": "swaylock",
      "tooltip": false
    },
    "custom/mic": {
      "exec": "amixer get Capture | grep -q '\\[on\\]' && echo '' || echo ''",
      "interval": 2,
      "signal": 9,
      "on-click": "amixer set Capture toggle; pkill -RTMIN+9 waybar",
      "format": "{}"
    },
    "custom/music": {
      "escape": true,
      "exec": "playerctl metadata --format='{{ title }}'",
      "format": "  {}",
      "interval": 5,
      "max-length": 50,
      "on-click": "playerctl play-pause",
      "tooltip": false
    },
    "custom/power": {
      "format": "",
      "on-click": "wlogout --buttons-per-row 4",
      "tooltip": false
    },
    "height": 28,
    "hyprland/workspaces": {
      "all-outputs": true,
      "disable-scroll": true,
      "format": "{icon}",
      "format-icons": {
        "active": "󰮯",
        "default": "",
        "urgent": ""
      },
      "on-click": "activate",
      "on-scroll-down": "hyprctl dispatch workspace e-1",
      "on-scroll-up": "hyprctl dispatch workspace e+1"
    },
    "layer": "top",
    "modules-left": ["hyprland/workspaces", "custom/music"],
    "modules-center": ["clock"],
    "modules-right": [
      "network",
      "bluetooth",
      "cpu",
      "memory",
      "backlight",
      "battery",
      "pulseaudio",
      "custom/mic",
      "custom/lock",
      "custom/power"
    ],
    "position": "top",
    "pulseaudio": {
      "format": "{icon}  {volume}%",
      "format-icons": {
        "default": ["", "", " "]
      },
      "format-muted": "",
      "on-click": "pavucontrol"
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    }
  }
]
